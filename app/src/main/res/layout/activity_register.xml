            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="wrap_content">
                <Fonts.LatoBLack
                    android:textColor="#000"
                    android:id="@+id/tv_reg_pass"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Password"
                    android:textSize="14sp"
                    android:layout_marginTop="@dimen/space_10"/>

                <ImageView
                    android:id="@+id/iconpass"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_marginTop="@dimen/space_10"
                    android:src="@drawable/iconn" />

            </LinearLayout>


            <EditText
                android:textSize="14sp"
                android:layout_marginTop="@dimen/space_4"
                android:id="@+id/et_reg_password"
                android:background="@drawable/xml_textbox_bg"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_50dp"
                android:fontFamily="@font/chivo"
                android:layout_marginBottom="5dp"
              android:hint="@string/password"
                android:inputType="textPassword"

                android:drawablePadding="@dimen/space_5"
                android:maxLength="10"
                android:ems="10"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="wrap_content">
                <Fonts.LatoBLack
                    android:textColor="#000"
                    android:id="@+id/tv_c_pass"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Confirm Password"
                    android:textSize="14sp"
                    android:layout_marginTop="@dimen/space_10"/>

                <ImageView
                    android:id="@+id/iconcpass"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_marginTop="@dimen/space_10"
                    android:src="@drawable/iconn" />

            </LinearLayout>

            <EditText
                android:textSize="14sp"
                android:layout_marginTop="@dimen/space_4"
                android:id="@+id/et_con_password"
                android:background="@drawable/xml_textbox_bg"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_50dp"
                android:layout_marginBottom="5dp"
                android:hint="Confirm Password"
                android:inputType="textPassword"
                android:fontFamily="@font/chivo"
                android:drawablePadding="@dimen/space_5"
                android:maxLength="10"
                android:ems="10"/>

            <RelativeLayout
                android:id="@+id/btnRegister"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_margin="12dp"
                android:background="@drawable/bg_rounded_button"
                android:padding="12dp">

                <Fonts.LatoBLack
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="@string/btn_Register"
                    android:textColor="#fff"
                    android:textSize="16dp"/>


            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical">
                <TextView
                    android:id="@+id/text_register"
                    android:layout_width="wrap_content"
                    android:layout_height="45dp"
                    android:layout_margin="12dp"
                    android:layout_centerInParent="true"
                    android:padding="12dp"
                    android:fontFamily="@font/chivo"
                    android:gravity="center"
                    android:text="Already Registered ?"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_small" />

                <TextView
                    android:id="@+id/btnSignin"
                    android:layout_toRightOf="@+id/text_register"
                    android:layout_width="wrap_content"
                    android:layout_height="45dp"
                    android:layout_marginTop="11dp"
                    android:layout_marginLeft="-15dp"
                    android:gravity="center"
                    android:text="Sign In "
                    android:textStyle="bold"
                    android:fontFamily="@font/chivo"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="@dimen/dimen_15dp"/>        </RelativeLayout>
        </LinearLayout>
    </ScrollView>

